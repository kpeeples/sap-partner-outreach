<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/detail1"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/detail2"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/detail3"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        style="@style/ListItemStyle"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="4dip" >

        <TextView
            android:id="@android:id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewAirportMaps"
            android:textAppearance="@style/ListItemTextStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="@string/viewAirportMapsDescription"
            android:src="@drawable/list_item_arrow" />
    </LinearLayout>

    <LinearLayout
        style="@style/ListItemStyle"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="4dip" >

        <TextView
            android:id="@android:id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/viewGoogleMap"
            android:textAppearance="@style/ListItemTextStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:contentDescription="@string/viewGoogleMapDescription"
            android:src="@drawable/list_item_arrow" />
    </LinearLayout>

</LinearLayout>